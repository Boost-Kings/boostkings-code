extends ../admin-template

block append js
  link(href='https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/css/select2.min.css', rel='stylesheet')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.4/js/select2.min.js')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-theme/0.1.0-beta.10/select2-bootstrap.min.css')

  script.
    $(document).ready(function() {
      $('.select2').select2({
        theme: "bootstrap"
      });
    });

block admin-content
  div
    h1 Add a booster
    p.lead Select a user from the list to convert their account to a Booster account.

    if users
      form(method="post")
        input(type="hidden" name="_csrf" value=_csrf)
        label Select a user
        select(name="newBooster").select2
          for user in users
            option(value=user._id)=user.email
        button.btn.btn-primary(style="margin-top:10px;") Make this user a booster